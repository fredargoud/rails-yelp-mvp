<div class="container">
  <h1>Restaurants</h1>

  <ul class="list-group list-group-flush">
    <% @restaurants.each do |restaurant| %>
      <li class="list-group-item"> <%= link_to restaurant.name, restaurant_path(restaurant) %>, <%= restaurant.address %></li>
    <% end %>
  </ul>

  <%= link_to 'Create a restaurant', new_restaurant_path %>
</div>
